<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="config/dbconn.properties" />

	<!-- 오라클에서 NULL값은 허용하는 옵션을 지정 :: MySQL에서는 이 부분이 기본적으로 내장되어 있다. -->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>

	<!-- VO -->
	<typeAliases>
		<typeAlias type="mybatis.services.domain.User" alias="user" />
	</typeAliases>

	<!-- JDBC 구축 -->
	<environments default="delvelop"> <!-- default와 id는 똑같은 내용이 와야 한다. -->
		<environment id="delvelop">
			<transactionManager type="JDBC" />
			<dataSource type="UNPOOLED">
				<property name="driver" value="${jdbc.oracle.driver}" />
				<property name="url" value="${jdbc.oracle.url}" />
				<property name="username" value="${jdbc.oracle.username}" />
				<property name="password" value="${jdbc.oracle.password}" />
			</dataSource>
		</environment>
	</environments>

	<!-- Mapping -->
	<mappers>
		<mapper resource="mapper/mybatis-userservice-mapping.xml" />
	</mappers>
</configuration>