package com.kb.arr;

import java.util.Random;

public class Test2 {
	static int[] su;

	public static void init() {
		su = new int[10];
		Random r = new Random();
		for (int i = 0; i < su.length; i++) {
			su[i] = r.nextInt(100);
		}
	}

	public static void main(String[] args) {
		init();

		// 총점을 구해보자
		System.out.println("총점: " + getSum());
		// 평균을 구해보자
		System.out.println("평균: " + getAverage());
		// 최대값을 구해보자
		System.out.println("최대값: " + getMax());
		// 편차가 가장 큰 값의 위치와 값을 구해보자
		std();
	}

	public static int getSum() {
		int sum = 0;
		for (int i = 0; i < su.length; i++) {
			sum += su[i];
		}
		return sum;
	}

	public static double getAverage() {
		return (double) getSum() / su.length;
	}

	public static int getMax() {
		int max = 0;
		for (int i = 0; i < su.length; i++) {
			if (max < su[i])
				max = su[i];
		}
		return max;
	}

	public static void std() {
		int minValue = 100, minIndex = -1;
		int maxValue = 0, maxIndex = -1;
		for (int i = 0; i < su.length; i++) {
			if (maxValue < su[i]) {
				maxValue = su[i];
				maxIndex = i;
			}
			
			if (minValue > su[i]) {
				minValue = su[i];
				minIndex = i;
			}
		}
		System.out.printf("%d번째의 값은 최대값인 %d이고, %d번째의 값은 최솟값인 %d이다.\n", maxIndex, maxValue, minIndex, minValue);
	}
}
