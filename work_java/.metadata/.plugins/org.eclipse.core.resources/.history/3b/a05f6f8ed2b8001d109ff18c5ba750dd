package day1;

public class LoopTest2 {

	public static void main(String[] args) {
		// 1~100까지 짝수의 합을 구하기
		int sum = 0;
		for (int i = 1; i <= 100; i++) {
			if (i % 2 == 0)
				sum += i;
		}
		System.out.println(sum);
		System.out.println(recursive(100, 0));

		sum = 0;
		for (int i = 1; i <= 100; i += 2) {
			sum += i;
		}
		System.out.println(sum);

	}

	static int recursive(int x, int sum) {
		if (x == 0)
			return sum;
		else if (x % 2 == 0) {
			sum += x;
		}
		return recursive(--x, sum);
	}

}
